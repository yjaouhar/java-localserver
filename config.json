{
    "timeouts": {
        "body_ms": 8000000,
        "header_ms": 3000000,
        "keep_alive_ms": 1500000
    },
    "servers": [
        {
            "name": "main",
            "host": "127.0.0.1",
            "ports": [
                8080,
                8081
            ],
            "default_server": true,
            "client_max_body_size": 1000000,
            "error_pages": {
                "400": "error_pages/400.html",
                "403": "error_pages/403.html",
                "404": "error_pages/404.html",
                "405": "error_pages/405.html",
                "413": "error_pages/413.html",
                "500": "error_pages/500.html"
            },
            "routes": [
                {
                    "path": "/",
                    "root": "resources",
                    "methods": [
                        "GET"
                    ],
                    "index": "index.html",
                    "directory_listing": false,
                    "default_file": "index.html"
                },
                {
                    "path": "/public",
                    "root": "resources/public",
                    "methods": [
                        "GET"
                    ],
                    "directory_listing": true,
                    "default_file": "home.html"
                },
                {
                    "path": "/upload",
                    "root": "resources/uploads",
                    "methods": [
                        "POST",
                        "DELETE",
                        "GET"
                    ],
                    "upload_dir": "resources/uploads",
                    "directory_listing": true
                },
                {
                    "path": "/cgi-bin",
                    "root": "cgi",
                    "methods": [
                        "GET"
                    ],
                    "directory_listing": true,
                    "cgi": {
                        "extension": ".py",
                        "interpreter": "python3"
                    }
                },
                {
                    "path": "/cgi",
                    "root": "cgi",
                    "methods": [
                        "GET"
                    ],
                    "directory_listing": true
                },
                {
                    "path": "/old",
                    "redirect": {
                        "code": 301,
                        "location": "/"
                    }
                }
            ]
        },
        {
            "name": "secondary",
            "host": "127.0.0.1",
            "ports": [
                9090
            ],
            "default_server": false,
            "client_max_body_size": 2000000,
            "error_pages": {
                "404": "error_pages/404.html",
                "500": "error_pages/500.html"
            },
            "routes": [
                {
                    "path": "/",
                    "root": "resources/admin",
                    "methods": [
                        "GET"
                    ],
                    "index": "dashboard.html",
                    "directory_listing": false,
                    "default_file": "dashboard.html"
                }
            ]
        }
    ]
}